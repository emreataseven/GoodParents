<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#00000000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:foreground="#00ffffff"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="#00000000">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_actImg3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="@color/White"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="false"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_actImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_actImg2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="false"
                android:background="@color/transparent_black_hex_7"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_actImg4"
                android:layout_width="8dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="90dp"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="#3cfd41"
                app:layout_constraintEnd_toStartOf="@+id/textView_actName"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="4dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_actImg5"
                android:layout_width="40dp"
                android:layout_height="5dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="#3cfd41"
                app:layout_constraintStart_toEndOf="@+id/imageView_actImg8"
                app:layout_constraintTop_toBottomOf="@+id/textView_actName"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="2dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_actImg8"
                android:layout_width="40dp"
                android:layout_height="5dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="#3cfd41"
                app:layout_constraintStart_toEndOf="@+id/imageView_actImg7"
                app:layout_constraintTop_toBottomOf="@+id/textView_actName"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="2dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_actImg7"
                android:layout_width="40dp"
                android:layout_height="5dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="#3cfd41"
                app:layout_constraintStart_toEndOf="@+id/imageView_actImg6"
                app:layout_constraintTop_toBottomOf="@+id/textView_actName"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="2dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_actImg6"
                android:layout_width="40dp"
                android:layout_height="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="#3cfd41"
                app:layout_constraintStart_toStartOf="@+id/imageView_actImg3"
                app:layout_constraintTop_toBottomOf="@+id/textView_actName"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="2dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_star5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="false"
                android:contentDescription=" "
                android:scaleType="fitXY"
                android:src="@drawable/star"
                app:layout_constraintStart_toEndOf="@+id/imageView_star4"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="4dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_star4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="false"
                android:contentDescription=" "
                android:scaleType="fitXY"
                android:src="@drawable/star"
                app:layout_constraintStart_toEndOf="@+id/imageView_star3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="4dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_star3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="false"
                android:contentDescription=" "
                android:scaleType="fitXY"
                android:src="@drawable/star"
                app:layout_constraintStart_toEndOf="@+id/imageView_star2"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="4dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_star2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="false"
                android:contentDescription=" "
                android:scaleType="fitXY"
                android:src="@drawable/star"
                app:layout_constraintStart_toEndOf="@+id/imageView_star1"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="4dip"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_star1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="false"
                android:contentDescription=" "
                android:scaleType="fitXY"
                android:src="@drawable/star"
                app:layout_constraintStart_toStartOf="@+id/imageView_actImg3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="4dip"
                app:riv_mutate_background="true" />

            <TextView
                android:id="@+id/textView_actName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="16dp"
                android:singleLine="false"
                android:text="SABAHIN İLK IŞIKLARINDA AMSTERDAM KANAL GEZİSİ"
                android:textColor="@android:color/background_light"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_actImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView_actImg" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Kişi Başı "
                app:layout_constraintStart_toStartOf="@+id/imageView_actImg3"
                app:layout_constraintTop_toBottomOf="@+id/textView_actName" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="248"
                app:layout_constraintStart_toEndOf="@+id/imageView_star5"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:text="150₺"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView_actName" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>




















